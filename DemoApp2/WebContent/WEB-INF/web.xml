<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">

	<!-- for every servlet we have to create a servlet and servlet-mapping tag -->
	<!-- When we have multiple servlets, <servlet-name> helps to identify which <servlet> maps to which <servlet-mapping> -->
	<!-- <servlet-class> will have the fully qualified class name of the java program to be called -->
	<!-- <url-pattern> will have the name of the request -->

	<servlet>
		<servlet-name>abc</servlet-name>
		<servlet-class>com.adder.AddServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>abc</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>
	
</web-app>
