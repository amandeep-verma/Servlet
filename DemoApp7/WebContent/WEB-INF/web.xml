<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">

	<servlet>
		<servlet-name>abc</servlet-name>
		<servlet-class>MyServlet</servlet-class>

		<!--To specify ServletConfig, we have to specify it inside the servlet tag -->
		<init-param>
			<param-name>name</param-name>
			<param-value>Rohit</param-value>
		</init-param>

	</servlet>

	<servlet-mapping>
		<servlet-name>abc</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>


	<!--To specify ServletContext, we do it in following manner-->
	<context-param>
		<param-name>name</param-name>
		<param-value>Amandeep</param-value>
	</context-param>

	<context-param>
		<param-name>phone</param-name>
		<param-value>Samsung</param-value>
	</context-param>

</web-app>